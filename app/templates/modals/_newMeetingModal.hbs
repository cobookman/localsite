<div id="newMeetingModal" class="reveal-modal" data-reveal>
  <form data-abide="ajax">
    <div class="row">
      <h3>Create A New Meeting</h3>
      <div class="large-12 columns">
        <label>* Name of the Meeting
          <input type="text" placeholder="My Super Cool Group Meeting" required pattern="^[a-zA-Z0-9\s]+$" class="name">
        </label>
        <small class="error">Can only use alpha numeric characters</small>
      </div>
    </div>
    <div class="row triggers">
      <h4>Attach Triggers</h4>
      <div class="medium-4 columns">
        <div class="row collapse">
          <label>At Start of Meeting</label>
          <div class="small-10 columns">
            <select class="start">
              <option value="null">None</option>
              <option>Something else here</option>
            </select>
          </div>
          <div class="small-2 columns">
            <a class="button postfix secondary addEvTrigger" href="/triggers/new/start">+</a>
          </div>
        </div>
      </div>
      <div class="medium-4 columns">
        <div class="row collapse">
          <label>X Min</label>
          <div class="small-10 columns">
            <select class="xmin">
              <option value="null">None</option>
              <option>Something else here</option>          
            </select>
          </div>
          <div class="small-2 columns">
            <a class="button postfix secondary addEvTrigger" href="/triggers/new/xmin">+</a>
          </div>            
        </div>
      </div>
      <div class="medium-4 columns">
        <div class="row collapse">
          <label>At End of Meeting</label>
          <div class="small-10 columns">
            <select class="end">
              <option value="null">None</option>
              <option>Something else here</option>
            </select>
          </div>
          <div class="small-2 columns">
            <a class="button postfix secondary addEvTrigger" href="/triggers/new/end">+</a>
          </div>            
        </div>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <button class="createAMeeting" type="submit">Create</button>
      </div>
    </div>
  </form>
  <a class="close-reveal-modal">&#215;</a>
</div>